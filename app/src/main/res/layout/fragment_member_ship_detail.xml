<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.MemberShipDetailFragment">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:scaleType="centerCrop"
              android:src="@drawable/gym" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:orientation="horizontal">

               <TextView
                   android:id="@+id/tvPlanName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="Membership Type"
                   android:textColor="@color/black"
                   android:textSize="18dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tvDuration"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:gravity="end"
                   android:text="Time Duration"
                   android:textColor="@color/black"
                   android:textSize="18dp"
                   android:textStyle="bold" />
          </LinearLayout>

          <TextView
              android:id="@+id/tvCost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="15dp"
              android:text="Membership cost"
              android:textColor="@color/black"
              android:textSize="18dp"
              android:textStyle="bold" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="15dp"
              android:text="Membership Benefits"
              android:textColor="@color/black"
              android:textSize="18dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvBenefits"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="15dp"
              android:layout_marginEnd="10dp"
              android:text="Membership Benefits"
              android:textColor="@color/black"
              android:textSize="14dp"
              android:textStyle="bold" />
     </LinearLayout>



     <!-- The button will now stay at the bottom of the screen -->
     <Button
         android:id="@+id/addToCart"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         android:text="Add to Cart"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

